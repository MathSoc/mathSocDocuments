%  \ifnum\value{agendaTimeMin}>\value{minnumber}11 correct\else oops\fi
  
  
  %agenda items
  \newenvironment{business}{
  	% begin code
  	\newcommand{\motion}[3]{
  		% text is printed
  		\item[##1 | Motion]  \hfill \theagendaTimeHour:\theagendaTimeMin\ifnum\value{agendaTimeMin}<10 0\fi \\
